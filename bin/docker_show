#!/usr/bin/env bash

{
  echo "CONTAINER IMAGE REPO TAG PORTS";
  join \
      <(docker ps -a | \
        tail -n +2 | \
        awk 'match($0, /[0-9]+(\.[0-9]+){3}:[0-9]+->[0-9]+/) {print $2,$1,substr($0,RSTART,RLENGTH); next}
             {print $2,$1,"-"}' | \
        sort -b) \
      <(docker images | \
        tail -n +2 | \
        awk '/IMAGE/ {next}
             {print $3,$1,$2}' | \
        sort -b) | \
  awk '{print $2,$1,$4,$5,$3}';
} | \
column -t
